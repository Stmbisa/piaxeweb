# API Configuration
NEXT_PUBLIC_API_BASE_URL=your_url_here

# ImageKit Configuration
NEXT_PUBLIC_IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
NEXT_PUBLIC_IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
NEXT_PUBLIC_IMAGEKIT_AUTH_ENDPOINT=/api/imagekit-auth

# JWT Configuration (for securing API routes)
JWT_SECRET=your_jwt_secret_here

# Deep linking (web -> app)
# Used to build Play Store / App Store fallback URLs on deep-link landing pages.
NEXT_PUBLIC_ANDROID_PACKAGE_NAME=com.piaxis.myapp
NEXT_PUBLIC_ANDROID_PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.piaxis.myapp
NEXT_PUBLIC_IOS_APP_STORE_URL=

# Well-known endpoints (universal links / app links)
# These power:
# - /.well-known/apple-app-site-association
# - /.well-known/assetlinks.json
APPLE_TEAM_ID=
IOS_BUNDLE_ID=com.piaxis.myapp

ANDROID_PACKAGE_NAME=com.piaxis.myapp
# Comma-separated list (release cert fingerprints). Example:
# ANDROID_SHA256_CERT_FINGERPRINTS=AA:BB:CC:...:FF,11:22:...:99
ANDROID_SHA256_CERT_FINGERPRINTS=